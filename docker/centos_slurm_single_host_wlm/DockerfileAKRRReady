FROM nsimakov/centos_slurm_single_host_wlm:1

LABEL description="centos for akrr tests"

# install dependencies
# Needed for shippable:
#    git sudo
# Needed to build RPM:
#    rpm-build
# Needed to run:
#    python34 python34-libs python34-bottle python34-requests python34-mysql openssl openssh-clients
# Needed for tests:
#     python34-PyYAML python34-pip
#     pip install pylint coverage pytest pytest-cov
#
RUN \
    yum -y update && \
    yum -y install --setopt=tsflags=nodocs \
        git sudo \
        python34 python34-libs python34-bottle python34-requests python34-mysql openssl openssh-clients \
        python34-PyYAML python34-pip \
        rpm-build && \
    yum clean all


RUN \
    pip3 install --upgrade pip && \
    pip3 install pylint coverage pytest pytest-cov

# reset entry point
ENTRYPOINT []
CMD []
